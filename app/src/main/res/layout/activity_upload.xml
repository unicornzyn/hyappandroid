    <ImageView
        android:id="@+id/detect_close"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/jt_icon"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="人脸建档"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:gravity="center"
        />
    <ImageView
        android:layout_width="180dp"
        android:layout_height="229dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="160dp"
        android:src="@mipmap/tm"
        />
    <ImageView
        android:layout_width="174dp"
        android:layout_height="223dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="163dp"
        android:id="@+id/img_photo"
        android:src="@mipmap/hbj"
        />
    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="410dp"
        android:layout_height="190dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <Button
            android:id="@+id/btn_select"
            android:layout_width="214dp"
            android:layout_height="38dp"
            android:background="@mipmap/dy"/>
        <Button
            android:id="@+id/btn_upload"
            android:layout_width="214dp"
            android:layout_height="38dp"
            android:background="@mipmap/de"
            android:layout_marginTop="20dp"
            />
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:id="@+id/tip_box">
            <ImageView
                android:id="@+id/tip_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:src="@mipmap/ts"
                />
            <TextView
                android:id="@+id/tip_msg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:textSize="12sp"
                android:text="" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
